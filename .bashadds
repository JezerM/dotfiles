#!usr/bin/env bash
function explorer() {
  if [[ $1 ]]; then
    local dir=$1
  else
    local dir=.
  fi
  nautilus $dir
}

alias cls=clear

alias wifi="nmcli radio wifi"

alias connection="nmcli connection"

alias vimbrowser="tabbed -c vimb -e"

function up() {
	if [[ $1 ]]; then
		local levels=$1
	else
		local levels=1
	fi
	while [[ "$levels" -gt "0" ]]; do
		cd ..
		levels=$(($levels-1))
	done
}

function restartWifi() {
	local SSID=$(iwgetid -r);
	wifi off;
	wifi on;
	local enabled=$(wifi);
	until [[ "$enabled" == "enabled" ]]; do
		enabled=$(wifi);
	done
	if [[ -n "$SSID" ]]; then
		echo "Reconnecting to $SSID";
		connection up $SSID;
	fi
}
