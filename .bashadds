#!usr/bin/env bash

function restartWifi() {
	local SSID=$(iwgetid -r);
	wifi off;
	wifi on;
	local enabled=$(wifi);
	until [[ "$enabled" == "enabled" ]]; do
		enabled=$(wifi);
	done
	if [[ -n "$SSID" ]]; then
		echo "Reconnecting to $SSID";
		connection up $SSID;
	fi
}

